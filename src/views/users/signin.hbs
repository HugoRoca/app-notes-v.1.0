<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card md-t text-center">
      <div class="card-header">
        <h1>Account Login</h1>
      </div>
      <img src="/img/logo.png" alt="Logo" class="mx-auto d-block m-4 logo">
      <div class="card-body">
        <form action="/users/signin" method="POST">
          <div class="form-group">
            <input type="email" class="form-control" name="email" autofocus placeholder="Email">
          </div>
          <div class="form-group">
            <input type="password" name="password" class="form-control" placeholder="Password">
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Sing In</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>